  }
  view: CanvasLayout {
    label: 'View 1'
    height: 560
    grid_size: 20
    block v1 {
      position: pos(280, 160, 600, 380)
      layer: 1
    }
    block title {
      position: pos(280, 20, 600, 40)
    }
    block f1 {
      position: pos(280, 80, 240, 80)
      layer: 2
    }
    block t2 {
      position: pos(20, 20, 380, 180)
      layer: 1
    }
    block t3 {
      position: pos(-20, 0, 280, 600)
    }
    mobile {
      mode: 'auto'
    }
