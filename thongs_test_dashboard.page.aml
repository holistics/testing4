Dashboard thongs_test_dashboard {
  title: "Thong's Test Dashboard"
  block title: TextBlock {
    content: @md # Your title goes here ;;
  }
  block v1: VizBlock {
    label: 'Count users over month'
    viz: DataTable {
      dataset: demo_ecommerce
      fields: [
        VizFieldFull {
          ref: ref('ecommerce_users', 'sign_up_date')
          transformation: 'datetrunc month'
          format {
            type: 'date'
            pattern: 'LLL yyyy'
          }
        },
        VizFieldFull {
          ref: ref('ecommerce_users', 'total_users')
          format {
            type: 'number'
            pattern: 'inherited'
          }
        }
      ]
      settings {
        show_row_number: true
        sorts: [
          SortSetting {
            field_index: 0
            direction: 'desc'
          }
        ]
        row_limit: 5000
        aggregate_awareness {
          enabled: true
          debug_comments: true
        }
      }
    }
  }
  block f1: FilterBlock {
    label: 'Order Master Status'
    type: 'field'
    source: FieldFilterSource {
      dataset: demo_ecommerce
      field: ref('order_master', 'status')
    }
    default {
      operator: 'is'
      value: []
    }
  }
  block t2: TextBlock {
    content: @md - <a href="https://testing4.holistics.io/dashboards/v4/100219-thong-s-test-dashboard?f1=cancelled">Cancelled Orders</a>
- <a href="https://testing4.holistics.io/dashboards/v4/100219-thong-s-test-dashboard?f1=delivered">Delivered Orders</a>
- <a href="https://testing4.holistics.io/dashboards/v4/100219-thong-s-test-dashboard?f1=refunded">Refunded Orders</a>

