Dashboard thongs_test_dashboard {
  title: "Thong's Test Dashboard"
  block title: TextBlock {
    content: @md # Your title goes here ;;
  }
  block v1: VizBlock {
    label: 'Count users over month'
    viz: DataTable {
      dataset: demo_ecommerce
      fields: [
        VizFieldFull {
          ref: ref('ecommerce_users', 'sign_up_date')
          transformation: 'datetrunc month'
          format {
            type: 'date'
            pattern: 'LLL yyyy'
          }
        },
        VizFieldFull {
          ref: ref('ecommerce_users', 'total_users')
          format {
            type: 'number'
            pattern: 'inherited'
          }
        }
      ]
      settings {
        show_row_number: true
        sorts: [
          SortSetting {
            field_index: 0
            direction: 'desc'
          }
        ]
        row_limit: 5000
        aggregate_awareness {
          enabled: true
          debug_comments: true
        }
      }
    }
  }
  block f1: FilterBlock {
    label: 'Order Master Status'
    type: 'field'
    source: FieldFilterSource {
      dataset: demo_ecommerce
      field: ref('order_master', 'status')
    }
    default {
      operator: 'is'
      value: []
    }
  }
  block t1: TextBlock {
    content: @md <style>
    /* Optional eye-candy */
    select {
      padding: .4rem .6rem;
      font-size: 1rem;
      border-radius: 4px;
    }
  </style>


<label for="jumpbox">Jump to:</label>
  <select id="jumpbox">
    <option value="">— choose a destination —</option>
    <option value="https://google.com/">Viblo (VN dev blog)</option>
    <option value="https://google.com/">Dân Trí (news)</option>
    <option value="https://google.com/">Stack Overflow</option>
    <option value="https://google.com/wiki/HTML">HTML @ Wikipedia</option>
  </select>

  <script>
    // 1. Grab the <select>
    const jumpbox = document.getElementById('jumpbox');

    // 2. Listen for a change
    jumpbox.addEventListener('change', (e) => {
      const url = e.target.value;
      if (url) window.location.href = url;     // 3. Navigate
    });
  </script>
;;
  }
  block t2: TextBlock {
    content: @md - <a href="https://testing4.holistics.io/dashboards/v4/100219-thong-s-test-dashboard?f1=cancelled">Cancelled Orders</a>
- <a href="https://testing4.holistics.io/dashboards/v4/100219-thong-s-test-dashboard?f1=delivered">Delivered Orders</a>
- <a href="https://testing4.holistics.io/dashboards/v4/100219-thong-s-test-dashboard?f1=refunded">Refunded Orders</a>
;;
  }
  view: CanvasLayout {
    label: 'View 1'
    height: 840
    grid_size: 20
    block v1 {
      position: pos(20, 200, 560, 400)
      layer: 1
    }
    block title {
      position: pos(20, 20, 1160, 60)
    }
    block f1 {
      position: pos(20, 120, 300, 100)
      layer: 2
    }
    block t1 {
      position: pos(680, 80, 600, 60)
      layer: 3
    }
    block t2 {
      position: pos(660, 200, 500, 320)
      layer: 1
    }
    mobile {
      mode: 'auto'
    }
  }
  theme: H.themes.vanilla
}