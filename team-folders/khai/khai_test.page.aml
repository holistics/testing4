Dashboard khai_test {
  title: 'Khai Test'
  view: CanvasLayout {
    label: 'View 1'
    height: 1080
    grid_size: 20
    block v1 {
      position: pos(20, 20, 1160, 520)
      layer: 1
    }
  }
  theme: H.themes.classic
  block v1: VizBlock {
    label: 'Total Orders by Month Order Created Date and Dynamic Breakdown Dimension'
    viz: AreaChart {
      dataset: khai_ecommerce
      calculation total_users {
        label: 'Total Users'
        formula: @aql count(users.id);;
        calc_type: 'measure'
        data_type: 'number'
      }
      calculation total_orders {
        label: 'Total Orders'
        formula: @aql count(orders.id);;
        calc_type: 'measure'
        data_type: 'number'
      }
      calculation total_orders_per_users {
        label: 'Total Orders Per Users'
        formula: @aql (total_orders * 1.0) / total_users;;
        calc_type: 'measure'
        data_type: 'number'
      }
      theme {

      }
      x_axis: VizFieldFull {
        ref: ref('khai_date_d', 'date_key')
        transformation: 'datetrunc month'
        format {
          type: 'date'
          pattern: 'LLL yyyy'
        }
      }
      y_axis {
        settings {
          show_data_label_by: 'value'
        }
        series {
          field: VizFieldFull {
            ref: 'total_orders_per_users'
            format {
              type: 'number'
              pattern: 'inherited'
            }
          }
        }
      }
      settings {
        row_limit: 5000
        x_axis_show_null_datetime: false
        aggregate_awareness {
          enabled: true
          debug_comments: true
        }
      }
    }
  }
}