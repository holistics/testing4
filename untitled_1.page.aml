VizBlock nice {
  label: 'test_ecommerce'
  viz: DataTable {
    dataset: simple_dataset
    theme {

    }
    fields: [
      VizFieldFull {
        ref: ref('ecommerce_orders', 'created_at')
        format {
          type: 'datetime'
        }
      },
      VizFieldFull {
        ref: ref('ecommerce_orders', 'status')
        format {
          type: 'text'
        }
      }
    ]
    settings {
      show_row_number: true
      row_limit: 5000
      aggregate_awareness {
        enabled: true
        debug_comments: true
      }
    }
  }
}

